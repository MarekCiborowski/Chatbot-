@model IEnumerable<BusinessLogicLayer.ViewModels.TestVM>

@using BusinessLogicLayer.Services.AdminServices

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        <h3>Finished Tests</h3>
        <hr />
        @using (Html.BeginForm())
        {
            <p>
                Find by name: @Html.TextBox("SearchString")
                <input type="submit" value="Search" />
            </p>
        }
        <table class="table table-hover table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.username)
                </th>
                <th>
                </th>
            </tr>

            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @item.username
                </td>
                

                <td>
                    <input type="button" class=" btn btn-outline-dark" value="Details" onclick="location.href='@Url.Action("Details", "FinishedTest", new { testID = item.testID })'" />
                </td>

            </tr>
            }



        </table>

    </div>
</body>
</html>