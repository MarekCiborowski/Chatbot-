@model AdminPanel.ViewModels.AdminViewModels.TestSchemeViewModels.DeleteTestSchemeVM

<div>
    <h4>Deletion menu</h4>
    <hr />
    <dl class="dl-horizontal"></dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
    <table class="table">
        <tr>
            <th>
                Schema name
            </th>
            <th>
                Description
            </th>
            <th>
                Mark templates to be deleted
            </th>
        </tr>

        @for(int i=0;i<Model.schemaList.Count();i++)
        {
            <tr>
                @Html.HiddenFor(modelItem => Model.schemaList[i].templateID)
                <td>
                    @Html.HiddenFor(modelItem => Model.schemaList[i].templateName)
                    @Html.DisplayFor(modelItem => Model.schemaList[i].templateName)
                </td>
                <td>
                    @Html.HiddenFor(modelItem => Model.schemaList[i].templateDescription)
                    @Html.DisplayFor(modelItem => Model.schemaList[i].templateDescription)
                </td>
                <td>
                    @Html.CheckBoxFor(modelItem => Model.schemaList[i].isChecked)
                </td>
            </tr>
        }

    </table>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Delete" class="btn btn-default" />
            </div>
        </div>
    }
</div>

<div>
    @Html.ActionLink("Back to List", "Index", "Admin")
</div>
